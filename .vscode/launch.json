{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Scores Service",
            "program": "${workspaceFolder}/simple-wof-server/index.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Launch Phrases Service",
            "program": "${workspaceFolder}/simple-wof-service-phrases/index.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Client",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "command": "BROWSER=none npm start --prefix simple-wof-client",
            "name": "Start Client",
            "request": "launch",
            "type": "node-terminal"
        }
    ]
}